{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "requireCleanWorkingDir": true,
    "tagName": "opc:v${version}",
    "commitMessage": "chore: release opc:v${version}",
    "tagAnnotation": "Release opc:v${version}",
    "push": true
  },
  "npm": {
    "publish": true,
    "timeout": 30,
    "skipChecks": true
  },
  "hooks": {
    "after:git:release": "echo Successfully released ${version} to GitLab",
    "after:release": "echo Successfully released ${version} to npm"
  }
}